<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#415DF6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textPrincipal"
        android:layout_width="379dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:background="#2196F3"
        android:text="Aplicacion Movil para solicitar Pistas y listas de pistas al servidor"
        android:textColor="#050505"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />


    <TextView
        android:id="@+id/textMenuPrincipal"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:layout_marginTop="140dp"
        android:autoText="false"
        android:background="#6C24ED"
        android:text="Menu de Opciones"
        android:textAlignment="center"
        android:textColor="#FBFAFA"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/ButtonSolListas"
        android:layout_width="178dp"
        android:layout_height="75dp"
        android:layout_marginBottom="432dp"
        android:onClick="goAreaSolicitudes"
        android:text="Solicitar Listas/Pistas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonReporteErrores"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginBottom="308dp"
        android:onClick="goErrores"
        android:text="Ver Reporete Errores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonConfig"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginBottom="156dp"
        android:onClick="goIpConfig"
        android:text="Configurar conexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>